<Window x:Class="spatify_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:spatify_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Grid Height="100">
                <Button x:Name="ButtonRap" Content="Rap" HorizontalAlignment="Left" Margin="126,10,0,0" VerticalAlignment="Top" FontSize="36" Height="54" Width="129">
                    <Button.ToolTip>
                        <Image Source="HipHop.jpg" Height="100" Width="100"></Image>
                    </Button.ToolTip>
                </Button>
                <Button x:Name="ButtonElectro" Content="Electro" HorizontalAlignment="Left" Margin="305,10,0,0" VerticalAlignment="Top" Height="54" Width="117" FontSize="36"/>
                <Button x:Name="ButtonRock" Content="Rock" HorizontalAlignment="Left" Margin="488,10,0,0" VerticalAlignment="Top" Height="54" Width="109" FontSize="36"/>
            </Grid>
            <StackPanel Height="100">
                <TextBlock x:Name="DisplayMusic" TextWrapping="Wrap" Width="512" Height="105"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
